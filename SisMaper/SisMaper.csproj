    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>none</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Library" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\MySqlConnector\MySqlConnector.csproj" />
    <ProjectReference Include="..\..\Persistence\Persistence.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.7" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\Hide.png" />
    <Resource Include="Images\Show.png" />
    <None Remove="Images\Sismaper Logo.png" />
    <Resource Include="Images\Sismaper Logo.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Database.cfg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
